<section class="form-container">
    <h2>Edit Recipe</h2>
    <form method="post">
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" {{#if product.name}}value="{{product.name}}"{{/if}}>

        <label for="skin">Skin Type:</label>
        <textarea id="skin" name="skin"> {{#if product.skin}}{{product.skin}}{{/if}}</textarea>

        <label for="description">Product Description:</label>
        <textarea id="description"
            name="description"> {{#if product.description}}{{product.description}}{{/if}}</textarea>

        <label for="ingredients">Key Ingredients:</label>
        <textarea id="ingredients" name="ingredients"> {{#if product.ingredients}}{{product.ingredients}}{{/if}}</textarea>

        <label for="benefits">Benefits:</label>
        <textarea id="benefits"
            name="benefits"> {{#if product.benefits}}{{product.benefits}}{{/if}}</textarea>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" {{#if product.price}}value="{{product.price}}"{{/if}}>

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" {{#if product.image}}value="{{product.image}}"{{/if}}>

        <button type="submit">Create Product Card</button>
    </form>
</section>